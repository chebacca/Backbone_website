# Backbone Edge Hub Configuration
# Copy this to .env.local and customize for your deployment

# Database
POSTGRES_PASSWORD=backbone_edge_secure_password_change_me

# MinIO Object Storage
MINIO_ROOT_USER=backbone_admin
MINIO_ROOT_PASSWORD=backbone_minio_secure_password_change_me

# Redis Cache
REDIS_PASSWORD=backbone_redis_secure_password_change_me

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long

# Organization
ORGANIZATION_ID=org_edge_001

# Network Discovery (optional)
EDGE_DISCOVERY_ENABLED=true
EDGE_SERVICE_NAME=backbone-edge

# Sync Settings (when cloud returns)
CLOUD_SYNC_ENABLED=true
CLOUD_API_URL=https://your-cloud-api.com/api
SYNC_INTERVAL_MINUTES=15

# Storage Limits
MAX_STORAGE_GB=100
MAX_PROJECTS_PER_ORG=50
MAX_DATASETS_PER_PROJECT=20
