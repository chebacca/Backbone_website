# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3002

# Firebase Configuration (Primary Database)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Configuration
STRIPE_ENABLED=true
STRIPE_TEST_MODE=true
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_BASIC_PRICE_ID=price_basic_tier_id
STRIPE_PRO_PRICE_ID=price_pro_tier_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_tier_id

# Email Configuration (Resend - Preferred)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@backbone-logic.com
RESEND_FROM_NAME=Backbone Logic

# Frontend URL
FRONTEND_URL=https://backbone-logic.web.app

# Security & Rate Limiting
CORS_ORIGIN=https://backbone-logic.web.app,https://dashboard-1c3a5.web.app

# Admin Configuration
ADMIN_EMAIL=admin@backbone-logic.com
ADMIN_PASSWORD=SecureAdminPassword123!
ADMIN_NAME=Admin User

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_USAGE_ANALYTICS=true

# Demo Mode Configuration
DEMO_TRIAL_DAYS=14
DEMO_REMINDER_INTERVALS=7,3,1,0.08
DEMO_AUTO_CLEANUP_DAYS=30
