{
  "hosting": {
    "public": "client/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "destination": "/index.html" }
    ],
    "predeploy": [
      "corepack enable",
      "pnpm -C client install --frozen-lockfile",
      "pnpm -C client run build"
    ]
  }
}


