rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================================================
    // SIMPLIFIED SECURITY RULES - AUTHENTICATED USERS ONLY
    // ============================================================================
    // This resolves the "Missing or insufficient permissions" errors
    // App-level security will handle more granular permissions
    
    // Allow authenticated users to read/write all collections
    // This is a temporary solution to get the app working
    // TODO: Implement more restrictive rules once the app is stable
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}