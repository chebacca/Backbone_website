# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dashboard_v14_db"

# Firebase Configuration (for authentication and hosting)
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-service-account-email"
FIREBASE_PRIVATE_KEY="your-private-key"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_BASIC_PRICE_ID="price_..."
STRIPE_PRO_PRICE_ID="price_..."
STRIPE_ENTERPRISE_PRICE_ID="price_..."

# SendGrid Configuration
SENDGRID_API_KEY="SG.your-api-key"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="Dashboard v14"

# Frontend Configuration
FRONTEND_URL="https://your-firebase-project.web.app"
CORS_ORIGIN="https://your-firebase-project.web.app"

# Optional: Enable Data Connect (set to false to use Prisma directly)
USE_DATACONNECT="false"

# Optional: Google Cloud Data Connect Configuration
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account.json"
DATACONNECT_LOCATION="us-central1"
DATACONNECT_PROJECT_ID="your-gcp-project-id"
