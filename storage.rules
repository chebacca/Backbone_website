rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Public assets (optional): allow read of files under public/
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && (request.resource.size < 20 * 1024 * 1024) // 20 MB limit
        && request.resource.contentType.matches('image/.*|video/.*|application/pdf');
    }

    // User files: /users/{uid}/...
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId
        && (request.resource == null || request.resource.size < 20 * 1024 * 1024);
    }

    // Admin-only bucket prefix
    match /admin/{allPaths=**} {
      // Cross-service Firestore checks are not supported in Storage rules.
      // Deny all access to admin path unless/until custom auth claims are in place.
      allow read, write: if false;
    }
  }
}
